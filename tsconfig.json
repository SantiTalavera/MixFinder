{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/screens/*": [
        "./src/screens/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/api/*": [
        "./src/api/*"
      ],
      "@/auth/*": [
        "./src/auth/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/state/*": [
        "./src/state/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/theme/*": [
        "./src/theme/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
